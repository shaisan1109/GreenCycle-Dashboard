<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/2fcb76e57d.js" crossorigin="anonymous"></script>
</head>
<body class="login-page">
    <div class="header">
        <a href="/">
            <img src="/pictures/Greencycle-Logo.png" class="header-logo">
        </a>
    </div>
    <div class="login-content">
        <div class="login-container">
            <h2>LOGIN</h2>

            <!-- Login form -->
            <form id="login-form">
                <input type="text" placeholder="Email" name="email" id="email" style="width:94%" required>
                <input type="password" placeholder="Password" name="password" id="password" style="width:94%" required>

                <div id="login-error" class="login-error-message hidden">
                    Wrong email or password
                </div>

                <button type="submit" class="login-btn">LOGIN</button>
            </form>

            <div class="links">
                <p><a href="/register">No Account? Register Here</a></p>
                <p><a href="#">Forgot Password?</a></p>
            </div>
        </div>
    </div>

<!-- Login Script -->
<script>

document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('login-form');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const loginError = document.getElementById('login-error');

    // Handle form submission
    form.addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = {
            email: emailInput.value,
            password: passwordInput.value,
        };

        fetch('/api/login', {
            method: 'POST',
            headers: {
            'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        })
        .then(response => {
            if (response.ok) return response.json();
            else throw new Error('Invalid credentials');
        })
        .then(data => {
            form.reset();
            window.location.href = '/dashboard';
        })
        .catch(error => {
            console.error('Login failed:', error);
            loginError.style.display = 'block';
            form.reset();
        });
    });
})

</script>

</body>
</html>
