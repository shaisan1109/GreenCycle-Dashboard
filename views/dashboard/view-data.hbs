<fieldset style="width: 100%; margin-bottom: 10px;">
    <h3>
        {{wasteGen.municipality_name}}, {{wasteGen.province_name}}, {{wasteGen.region_name}}
    </h3>
</fieldset>

<div style="display: flex;">
    <fieldset style="width: 100%;">
        <legend>Submission Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Submitted by</td>
                <td>{{wasteGen.name}}</td>
            </tr>
            <tr>
                <td class="label">Organization Name</td>
                <td>{{wasteGen.company_name}}</td>
            </tr>
            <tr>
                <td class="label">Date Submitted</td>
                <td>{{textDate wasteGen.date_submitted}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 100%;">
        <legend>Collection Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Year of Collection</td>
                <td>{{wasteGen.year_collected}}</td>
            </tr>
            <tr>
                <td class="label">Start Date</td>
                <td>{{textDate wasteGen.collection_start}}</td>
            </tr>
            <tr>
                <td class="label">End Date</td>
                <td>{{textDate wasteGen.collection_end}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 95%;">
            <legend>Waste Generation</legend>
            <table class="user-profile">
                <tr>
                    <td class="label">Population (based on Census)</td>
                    <td>{{commaNumber wasteGen.population}}</td>
                </tr>
                <tr>
                    <td class="label">Waste Generation per Capita (Kg/cap-day)</td>
                    <td>{{commaNumber wasteGen.per_capita}}</td>
                </tr>
                <tr>
                    <td class="label">Annual Waste Generation (kg/year)</td>
                    <td>{{commaNumber wasteGen.annual}}</td>
                </tr>
            </table>
        </fieldset>
</div>

<div style="display: flex;">
    <div>
        <fieldset class="waste-comp">
            <legend>Waste Composition</legend>

            <div class="tb-container">
                <table>
                    <tr class="tb-header">
                        <td>Material</td>
                        <td>Subtype</td>
                        <td>Origin</td>
                        <td>Percentage</td>
                    </tr>
                    {{#each wasteComp}}
                        <tr>
                            <td>{{material_name}}</td>
                            <td>{{subtype_remarks}}</td>
                            <td>{{origin_name}}</td>
                            <td>{{waste_amount}} %</td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </fieldset>
    </div>
    <div class="pie-chart">
        <canvas id="summary-pie">
            <!-- Populated by JS -->
        </canvas>
    </div>
</div>

<fieldset class="waste-comp-bar" id="waste-comp-bar">
    <legend>Waste Composition per Material</legend>

        <!-- Populated by JS -->
    
</fieldset>

<!-- Pass json object and start javascript -->
<!-- Using JS in the template is technically foul, but w/e it works -->
<script>
    const wasteComp = {{{json wasteComp}}} // Embed the server-side data into JavaScript
    const pieDiv = document.getElementById('summary-pie')

    // Calculate total waste amount per material
    const totals = wasteComp.reduce((acc, item) => {
        if (!acc[item.material_id]) {
            acc[item.material_id] = { 
                material_name: item.material_name, 
                total_waste: 0 
            };
        }
        acc[item.material_id].total_waste += parseFloat(item.waste_amount);
        return acc;
    }, {});

    // Convert totals object into a sorted array (least to greatest)
    const sortedTotals = Object.values(totals).sort((a, b) => a.total_waste - b.total_waste);

    // Extract sorted labels and data
    const pieLabels = sortedTotals.map(item => item.material_name);
    const pieData = sortedTotals.map(item => item.total_waste);

    // Create the pie chart
    new Chart(pieDiv, {
        type: 'pie',
        data: {
            labels: pieLabels,
            datasets: [{
                data: pieData,
                hoverOffset: 8,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'left',
                    align: 'start'
                },
                tooltip: {
                    enabled: true
                }
            }
        }
    });

    // Bar charts code
    // Group data by material_id
    const groupedData = wasteComp.reduce((acc, item) => {
        if (!acc[item.material_id]) {
            acc[item.material_id] = {
                material_name: item.material_name,
                subtypes: [],
                origins: [],
                waste_amounts: []
            };
        }
        acc[item.material_id].subtypes.push(item.subtype_remarks);
        acc[item.material_id].origins.push(item.origin_name);
        acc[item.material_id].waste_amounts.push(parseFloat(item.waste_amount)); // Convert string to number
        return acc;
    }, {});

    // Reference to the charts container
    const chartsContainer = document.getElementById('waste-comp-bar');

    Object.keys(groupedData).forEach(material_id => {
        const material = groupedData[material_id];

        // Create a new canvas for each material
        const canvasContainer = document.createElement('div');
        canvasContainer.classList.add('bar-container');

        canvasContainer.innerHTML = `
        <div class='bar-chart-container'>
            <h3>${material.material_name}</h3>
            <canvas id="chart-${material_id}"></canvas>
        </div>`;
        chartsContainer.appendChild(canvasContainer);

        // Create the chart
        const ctx = document.getElementById(`chart-${material_id}`).getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: material.subtypes, // Labels are subtypes (Wine Bottles, Lightbulbs, etc.)
                datasets: [{
                    label: 'Waste Amount (kg)',
                    data: material.waste_amounts, // Waste amounts as data
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

