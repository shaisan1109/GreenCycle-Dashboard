<!-- Modal script -->
<script>

// Get ID of current entry
const entryId = {{{ entryId }}}
const reviewedBy = {{{ reviewer }}}

// Wait for the DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const approveModal = document.getElementById('approve-modal');
    const approveClose = document.getElementById('approve-close');
    const approveCancel = document.getElementById('approve-cancel');

    /* APPROVE MODAL */
    // Hide modal if close btn is clicked
    if (approveClose) {
        approveClose.onclick = function() {
            approveModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (approveCancel) {
        approveCancel.onclick = function() {
            approveModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == approveModal) {
            approveModal.style.display = "none";
        }
    }

    /* REJECT MODAL */
    const rejectModal = document.getElementById('reject-modal');
    const rejectClose = document.getElementById('reject-close');
    const rejectCancel = document.getElementById('reject-cancel');

    // Hide modal if close btn is clicked
    if (rejectClose) {
        rejectClose.onclick = function() {
            rejectModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (rejectCancel) {
        rejectCancel.onclick = function() {
            rejectModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == rejectModal) {
            rejectModal.style.display = "none";
        }
    }
})

function showApprove() {
    document.getElementById('approve-modal').style.display = 'block';
}

function showReject() {
    document.getElementById('reject-modal').style.display = 'block';
}

function updateEntry(status) {
    if(status === 'Approved') {
        // Send request to server
        reviewApi('Approved', null, reviewedBy)
            .then(response => {
                if (response.success) {                
                    // Pop up to show success
                    document.getElementById('approve-modal').style.display = 'none'
                    document.getElementById('success-approve').style.display = 'block'
                } else {
                    throw new Error(response.message || 'Failed to approve application')
                }
            })
    } else { // Rejected
        const comment = document.getElementById('reject-notes').value

        // Send request to server
        reviewApi('Needs Revision', comment, reviewedBy)
            .then(response => {
                if (response.success) {                
                    // Pop up to show success
                    document.getElementById('reject-modal').style.display = 'none'
                    document.getElementById('success-reject').style.display = 'block'
                } else {
                    throw new Error(response.message || 'Failed to put entry on hold')
                }
            })
    }
}

async function reviewApi(status, comment, reviewedBy) {
    try {
        const response = await fetch(`/api/data/${entryId}/status`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                status,
                comment,
                reviewedBy
            })
        });
        
        if (!response.ok) {
            console.error(`Server response not OK: ${response.status} ${response.statusText}`);
            const errorText = await response.text();
            console.error('Error response body:', errorText);
            throw new Error(`Server responded with ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        console.log('Status update response:', data);
        return data;
    } catch (error) {
        console.error('Error in reviewApi() -- ', error);
        throw error;
    }
}

</script>

<!-- Table filtering script -->
<script>

// Supertype filter
const searchInput = document.getElementById('tbl-search');
const dropdown = document.getElementById('supertype-filter');

function filterTable() {
  const keyword = searchInput.value.trim().toLowerCase();
  const selectedSupertype = dropdown.value;
  const allRows = document.querySelectorAll('tr[supertype]');

  allRows.forEach(row => {
    const rowSupertype = row.getAttribute('supertype');
    const text = row.textContent.toLowerCase();
    const matchesSupertype = selectedSupertype === 'all' || rowSupertype === selectedSupertype;
    const matchesSearch = text.includes(keyword);

    row.style.display = matchesSupertype && matchesSearch ? '' : 'none';
  });
}

searchInput.addEventListener('input', filterTable);
dropdown.addEventListener('change', filterTable);

</script>

