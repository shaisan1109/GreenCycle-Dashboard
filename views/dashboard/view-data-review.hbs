<!-- Approval window -->
<fieldset class="review-window">
    <h3 style="font-weight: normal;">Approve data entry?</h3>

    <button type="button" class="review-approve" onclick="showApprove()">
        <i class="fa-solid fa-thumbs-up"></i>&nbsp; Approve
    </button>&emsp;

    <button type="button" class="review-reject" onclick="showReject()">
        <i class="fa-solid fa-thumbs-down"></i>&nbsp; Reject
    </button>
</fieldset>

<!-- Actual Data Display -->
<fieldset style="width: 100%; margin-bottom: 10px; padding-top: 20px; padding-bottom: 20px">
    <h1 style="margin:0">Insert Title Here</h1>
    <h3 style="margin:0; font-weight:normal;">
        <i>{{wasteGen.location_name}}</i>
    </h3>
</fieldset>

<div style="display: flex;">
    <fieldset style="width: 100%;">
        <legend>Submission Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Submitted by</td>
                <td>{{uppercase wasteGen.lastname}}, {{wasteGen.firstname}}</td>
            </tr>
            <tr>
                <td class="label">Organization Name</td>
                <td>{{wasteGen.company_name}}</td>
            </tr>
            <tr>
                <td class="label">Date Submitted</td>
                <td>{{textDate wasteGen.date_submitted}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 100%;">
        <legend>Collection Info</legend>
        <table class="user-profile">
            <tr>
                <td class="label">Start Date</td>
                <td>{{textDate wasteGen.collection_start}}</td>
            </tr>
            <tr>
                <td class="label">End Date</td>
                <td>{{textDate wasteGen.collection_end}}</td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="width: 95%;">
            <legend>Waste Generation</legend>
            <table class="user-profile">
                <tr>
                    <td class="label">Population (based on Census)</td>
                    <td>{{commaNumber wasteGen.population}}</td>
                </tr>
                <tr>
                    <td class="label">Waste Generation per Capita (Kg/cap-day)</td>
                    <td>{{commaNumber wasteGen.per_capita}}</td>
                </tr>
                <tr>
                    <td class="label">Annual Waste Generation (kg/year)</td>
                    <td>{{commaNumber wasteGen.annual}}</td>
                </tr>
            </table>
        </fieldset>
</div>

<div style="display: flex;">
    <div>
        <fieldset class="waste-comp">
            <legend>Waste Composition</legend>

            <!-- Waste Composition -->
            {{#each supertypes}}
                <div>
                    {{uppercase name}}

                    <!-- Display types of current supertype -->
                    <table>
                        <tr>
                            <td><!-- Blank cell for type --></td>
                            {{#each ../sectors}}
                                <td>{{name}}</td>
                            {{/each}}
                        </tr>
                        {{#each types}}
                            <tr>
                                <td>{{name}}</td>
                                {{#each ../../sectors}}
                                    <td>
                                        0.00
                                    </td>
                                {{/each}}
                            </tr>
                        {{/each}}
                    </table>
                </div>
            {{/each}}
        </fieldset>
    </div>
