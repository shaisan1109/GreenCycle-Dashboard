<main class="dashboard-container">
    <section class="welcome-card">
      <h1>Welcome, <span id="welcome-name">{{user.firstname}}</span>!</h1>
    </section>
    <section class="section top-contributors-section">
  <h2 class="section-heading">
    <i class="fas fa-chart-line"></i> Top Waste Contributors
  </h2>
  
  <div class="table-section">
    
    <!-- Top Waste Sectors -->
    <div class="table-wrapper contributor-card">
      <h3 class="table-title"><i class="fas fa-industry"></i> Top Waste Sectors</h3>
      <div class="table-container">
        <table class="dashboard-table">
          <thead>
            <tr>
              <th>Sector</th>
            </tr>
          </thead>
          <tbody>
            {{#each topSectors}}
              <tr>
                <td>{{name}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Top Waste Types -->
    <div class="table-wrapper contributor-card">
      <h3 class="table-title"><i class="fas fa-recycle"></i> Top Waste Supertypes</h3>
      <div class="table-container">
        <table class="dashboard-table">
          <thead>
            <tr>
              <th>Waste Supertype</th>
            </tr>
          </thead>
          <tbody>
            {{#each topWasteTypes}}
              <tr>
                <td>{{supertype_name}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>

    <section class="section">
      <h2>General Features</h2>
      <div class="card-grid">
        <a href="/dashboard/notifications" class="feature-card">
          <div class="feature-icon"><i class="fas fa-bell"></i></div>
          <div class="feature-text">
            <h3>
              Notifications&nbsp;
              <span class="notif-badge" id="notif-badge" style="{{#ifEquals notifCount 0}}display:none;{{/ifEquals}}">
                {{notifCount}}
              </span>
            </h3>
            <p>Stay up-to-date with all your important alerts and messages.</p>
          </div>
        </a>

        <a href="/dashboard/data/all" class="feature-card">
          <div class="feature-icon"><i class="fas fa-table"></i></div>
          <div class="feature-text">
            <h3>View Data Entries</h3>
            <p>Browse all approved data entries submitted to the system.</p>
          </div>
        </a>

        <a href="/dashboard/guide" class="feature-card">
          <div class="feature-icon"><i class="fas fa-book-open"></i></div>
          <div class="feature-text">
            <h3>Waste Type Guide</h3>
            <p>Learn about waste classifications with examples.</p>
          </div>
        </a>
      </div>
    </section>

    <section class="section">
      <h2>Your Reports</h2>
      <div class="card-grid">
        <a href="/dashboard/submit-report" class="feature-card">
          <div class="feature-icon"><i class="fas fa-file-upload"></i></div>
          <div class="feature-text">
            <h3>Submit Data Entry</h3>
            <p>Upload your waste composition data for review.</p>
          </div>
        </a>

        <a href="/dashboard/data/user/revision" class="feature-card">
          <div class="feature-icon"><i class="fas fa-file-pen"></i></div>
          <div class="feature-text">
            <h3>
              Submissions in Progress&nbsp;
              <span class="notif-badge" id="notif-badge" style="{{#ifEquals revisionCount 0}}display:none;{{/ifEquals}}">
                  {{revisionCount}}
              </span>
            </h3>
            <p>View your submissions for review.</p>
          </div>
        </a>

        <a href="/dashboard/data/user/approved" class="feature-card">
          <div class="feature-icon"><i class="fas fa-clipboard-check"></i></div>
          <div class="feature-text">
            <h3>Approved Submissions</h3>
            <p>View your approved reports.</p>
          </div>
        </a>

        <a href="/dashboard/noncompliance" class="feature-card">
          <div class="feature-icon"><i class="fas fa-exclamation-triangle"></i></div>
          <div class="feature-text">
            <h3>
              Client Compliance Warning&nbsp;
              {{#ifNotEquals cmpTotalCount 0}}
                  <span class="notif-badge"> {{cmpTotalCount}}</span>
              {{/ifNotEquals}}
            </h3>
            <p>View your non-compliance notices based on submitted data.</p>
          </div>
        </a>
      </div>
    </section>

    {{#ifNotEquals user.supertype 2}}
        <section class="section">
          <h2>Staff Functions</h2>
          <div class="card-grid">

            <a href="/dashboard/data/submissions/pending" class="feature-card">
              <div class="feature-icon"><i class="fa-solid fa-file-pen"></i></div>
              <div class="feature-text">
                <h3>
                  Review Data Submissions&nbsp;
                  {{#ifNotEquals pendingData 0}}
                      <span class="notif-badge">{{pendingData}}</span>
                  {{/ifNotEquals}}
                </h3>
                <p>View and manage pending or revised data entries.</p>
              </div>
            </a>

            <a href="/control-panel" class="feature-card admin-card">
              <div class="feature-icon"><i class="fa-solid fa-screwdriver-wrench"></i></div>
              <div class="feature-text">
                <h3>Control Panel</h3>
                <p>Access administrative settings, system controls, and oversight tools.</p>
              </div>
            </a>
          </div>
        </section>
    {{/ifNotEquals}}
  </main>

