<main class="dashboard-container">
    <section class="welcome-card">
      <h1>Welcome, <span id="welcome-name">{{user.firstname}}</span>!</h1>
    </section>

    <section class="section">
      <h2>General Features</h2>
      <div class="card-grid">
        <a href="/dashboard/notifications/{{user.id}}" class="feature-card">
          <div class="feature-icon"><i class="fas fa-bell"></i></div>
          <div class="feature-text">
            <h3>Notifications</h3>
            <p>Stay up-to-date with all your important alerts and messages.</p>
          </div>
        </a>

        <a href="/dashboard/data/all" class="feature-card">
          <div class="feature-icon"><i class="fas fa-table"></i></div>
          <div class="feature-text">
            <h3>View Data Entries</h3>
            <p>Browse all approved data entries submitted to the system.</p>
          </div>
        </a>

        <a href="/dashboard/guide" class="feature-card">
          <div class="feature-icon"><i class="fas fa-book-open"></i></div>
          <div class="feature-text">
            <h3>Waste Type Guide</h3>
            <p>Learn about waste classifications with examples.</p>
          </div>
        </a>
      </div>
    </section>

    <section class="section">
      <h2>Data Reports</h2>
      <div class="card-grid">
        <a href="/dashboard/submit-report" class="feature-card">
          <div class="feature-icon"><i class="fas fa-file-upload"></i></div>
          <div class="feature-text">
            <h3>Submit Data Entry</h3>
            <p>Upload your waste composition data for review.</p>
          </div>
        </a>

        <a href="/dashboard/data/user/{{user.id}}" class="feature-card">
          <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
          <div class="feature-text">
            <h3>Your Submissions</h3>
            <p>View and track your previously submitted reports.</p>
          </div>
        </a>
      </div>
    </section>

    {{#ifNotEquals user.supertype 2}}
        <section class="section">
          <h2>Staff Functions</h2>
          <div class="card-grid">
            <a href="/control-panel" class="feature-card admin-card">
              <div class="feature-icon"><i class="fa-solid fa-screwdriver-wrench"></i></div>
              <div class="feature-text">
                <h3>Control Panel</h3>
                <p>Access administrative settings, system controls, and oversight tools.</p>
              </div>
            </a>
          </div>
        </section>
    {{/ifNotEquals}}
  </main>

