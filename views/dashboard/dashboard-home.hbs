<main class="dashboard-container">
    <section class="welcome-card">
      <h1>Welcome, <span id="welcome-name">{{user.firstname}}</span>!</h1>
    </section>

    <section class="section">
      <h2>General Features</h2>
      <div class="card-grid">
        <a href="/dashboard/search" class="feature-card"><i class="fas fa-search"></i> Data Search</a>
        <a href="/dashboard/data/all" class="feature-card"><i class="fas fa-table"></i> Data Entries</a>
        <a href="/dashboard/data/map" class="feature-card"><i class="fas fa-map-marked-alt"></i> Waste Map</a>
        <a href="/dashboard/guide" class="feature-card"><i class="fas fa-book-open"></i> Waste Type Guide</a>
      </div>
    </section>

    <section class="section">
      <h2>Data Reports</h2>
      <div class="card-grid">
        <a href="/dashboard/submit-report" class="feature-card"><i class="fas fa-file-upload"></i> Submit Data Entry</a>
        <a href="/dashboard/data/user/{{user.id}}" class="feature-card"><i class="fas fa-chart-line"></i> Your Submissions</a>
      </div>
    </section>

    {{#ifNotEquals user.supertype 2}}
        <section class="section">
        <h2>Staff Functions</h2>
        <div class="card-grid">
            <a href="/dashboard/data/submissions" class="feature-card"><i class="fas fa-clipboard-check"></i> Review Data Submissions</a>
            <a href="/dashboard/user-applications" class="feature-card"><i class="fas fa-user-plus"></i> User Applications</a>
            <a href="/dashboard/partners" class="feature-card"><i class="fas fa-handshake"></i> Partners</a>
        </div>
        </section>
    {{/ifNotEquals}}
  </main>

  <style>
    a {
  text-decoration: none;
  color: inherit;
}

.dashboard-container {
  max-width: 1100px;
  margin: 40px auto;
  padding: 0 20px;
}

/* Welcome Card */
.welcome-card {
  background-color: #d4edda;
  color: #155724;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  margin-bottom: 40px;
  text-align: center;
}

.welcome-card h1 {
  font-size: 2rem;
  margin: 0;
}

/* Sections */
.section {
  margin-bottom: 40px;
}

.section h2 {
  font-size: 1.4rem;
  margin-bottom: 15px;
  color: #444;
}

/* Feature Cards */
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}

.feature-card {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  font-weight: 600;
  font-size: 1rem;
  text-align: center;
  transition: background-color 0.2s, transform 0.2s;
  box-shadow: 0 2px 6px rgba(0,0,0,0.04);
  border: 2px solid #127009;
}

.feature-card i {
  display: block;
  font-size: 1.5rem;
  margin-bottom: 8px;
}

.feature-card:hover {
  background-color: #d4f5d2;
  transform: translateY(-3px);
}
  </style>