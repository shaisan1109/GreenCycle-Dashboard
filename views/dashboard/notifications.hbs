<h1 class="notif-title">Notifications</h1>

{{#if notifications.length}}
  <!-- Notification List -->
    <ul class="notif-list">
        {{#each notifications}}
        <!-- Notification item -->
        <li class="notif-item {{#unless is_read}}unread{{/unless}}" data-notif-id="{{id}}">
          <!-- Delete button -->
          <button class="delete-notif-btn" title="Delete Notification">&times;</button>

          <!-- Main content -->
          <div class="notif-main-content">
            <div class="notif-content">
              <h3 class="notif-type">{{uppercase message_type}}</h3>
            </div>

            <p class="notif-message">{{{message}}}</p>

            <div style="display: flex;">
              {{#if link}}
                <button type="button"
                  class="link-btn"
                  data-notif-id="{{id}}"
                  data-is-read="{{#if is_read}}true{{else}}false{{/if}}"
                  data-target-link="{{link}}">
                  <i class="fa-solid fa-paperclip"></i> View Details
                </button>&nbsp;
              {{/if}}

              <button type="button"
                  class="mark-read-btn"
                  data-notif-id="{{id}}"
                  data-is-read="{{#if is_read}}true{{else}}false{{/if}}">
                {{#if is_read}}
                  <i class="fa-solid fa-envelope"></i> Mark as Unread
                {{else}}
                  <i class="fa-solid fa-envelope-open"></i> Mark as Read
                {{/if}}
              </button>
            </div>

            <span class="notif-date" datetime="{{created_at}}">{{created_at}}</span>
          </div>

          <!-- Delete confirmation -->
          <div class="notif-delete-confirm hidden">
            <p>Delete this notification?</p>
            <form class="delete-notif-form" action="/notifications/delete/{{id}}" method="POST">
              <button type="submit" class="confirm-delete-btn">Yes</button>
              <button type="button" class="cancel-delete-btn">Cancel</button>
            </form>
          </div>
        </li>
        {{/each}}
    </ul>
{{else}}
    <p class="notif-empty">You have no notifications.</p>
{{/if}}

<!-- Time ago JS (for displaying relative time) -->
<script src="https://unpkg.com/timeago.js@4.0.2/dist/timeago.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    timeago.render(document.querySelectorAll('.notif-date'));
  });
</script>

<!-- ALL notif functions -->
<script src="/../js/notifications.js" type="text/javascript"></script>

