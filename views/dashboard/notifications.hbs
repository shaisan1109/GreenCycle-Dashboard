<h1 class="notif-title">{{totalNotifs}} Status Updates</h1>

<!-- Bulk actions toolbar -->
<div id="notif-toolbar" class="notif-toolbar">
  <button id="toggle-select-btn" class="toolbar-btn">
    <i class="fa-solid fa-square-check"></i> Select All
  </button>

  <!-- Hidden action buttons -->
  <div id="bulk-actions" class="bulk-actions hidden">
    <button id="toggle-read-btn" class="toolbar-btn success">
      <i class="fa-solid fa-envelope-open"></i> Mark as Read
    </button>

    <button id="delete-selected-btn" class="toolbar-btn danger">
      <i class="fa-solid fa-trash"></i> Delete
    </button>
  </div>

  <!-- Entry count -->
  <p class="entry-count-text" style="margin-left: auto; color: darkgreen;">
    Showing <b>{{startEntry}} â€“ {{endEntry}}</b> of <b>{{totalNotifs}}</b> status updates
  </p>
</div>


{{#if notifications.length}}
  <!-- Notification List -->
    <ul class="notif-list">
        {{#each notifications}}
        <!-- Notification item -->
        <li class="notif-item {{#unless is_read}}unread{{/unless}}" data-notif-id="{{id}}">

          <!-- Delete button -->
          <button class="delete-notif-btn" title="Delete Status Update">&times;</button>

          <!-- Main content -->
          <div class="notif-main-content">
            <div class="notif-content">
              <h3 class="notif-type">{{#unless is_read}}<i class="fa-solid fa-circle unread-circle"></i>{{/unless}}{{uppercase message_type}}</h3>
            </div>

            <p class="notif-message">{{{message}}}</p><br>

            <div style="display: flex;">
              {{#if link}}
                <button type="button"
                  class="link-btn"
                  data-notif-id="{{id}}"
                  data-is-read="{{#if is_read}}true{{else}}false{{/if}}"
                  data-target-link="{{link}}">
                  <i class="fa-solid fa-paperclip"></i> View Details
                </button>&nbsp;
              {{/if}}

              <button type="button"
                class="mark-read-btn"
                data-notif-id="{{id}}"
                data-is-read="{{#if is_read}}true{{else}}false{{/if}}">
                {{#if is_read}}
                  <i class="fa-solid fa-envelope"></i> Mark as Unread
                {{else}}
                  <i class="fa-solid fa-envelope-open"></i> Mark as Read
                {{/if}}
              </button>
            </div>

            <span class="notif-date" datetime="{{created_at}}">{{created_at}}</span>
          </div>

          <!-- Delete confirmation -->
          <div class="notif-delete-confirm hidden">
            <p>Delete this status update?</p>
            <form class="delete-notif-form" action="/notifications/delete/{{id}}" method="POST">
              <button type="submit" class="confirm-delete-btn">Yes</button>
              <button type="button" class="cancel-delete-btn">Cancel</button>
            </form>
          </div>
        </li>
        {{/each}}
    </ul>
{{else}}
    <p class="notif-empty">You have no status updates.</p>
{{/if}}

<!-- Page counter -->
<div class="pagination">
    {{#if totalPages}}
        {{#unless (eq currentPage 1)}}
            <a href="{{queryString query page=1}}" class="pagination-btn arrow">
              <i class="fa-solid fa-angles-left"></i>
            </a>
        {{/unless}}

        {{#if (gt currentPage 1)}}
            <a href="{{queryString query page=(subtract currentPage 1)}}" class="pagination-btn arrow">
              <i class="fa-solid fa-chevron-left"></i>
            </a>
        {{/if}}

        {{#each (paginationRange currentPage totalPages)}}
          <a href="{{queryString ../query page=this}}" class="pagination-btn {{#ifEquals this ../currentPage}}active{{/ifEquals}}">
            {{this}}
          </a>
        {{/each}}

        {{#if (lt currentPage totalPages)}}
            <a href="{{queryString query page=(add currentPage 1)}}" class="pagination-btn arrow">
              <i class="fa-solid fa-chevron-right"></i>
            </a>
        {{/if}}

        {{#unless (eq currentPage totalPages)}}
            <a href="{{queryString query page=totalPages}}" class="pagination-btn arrow">
              <i class="fa-solid fa-angles-right"></i>
            </a>
        {{/unless}}
    {{/if}}
</div>

<!-- Delete confirmation modal -->
<div id="delete-confirm-modal" class="delete-modal hidden">
  <div class="delete-modal-content">
    <h3>Confirm Deletion</h3>
    <p>Are you sure you want to delete the selected status updates?</p>
    <div class="delete-modal-actions">
      <button id="confirm-delete-yes" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> Yes
      </button>
      <button id="confirm-delete-no" class="btn btn-secondary">
        <i class="fa-solid fa-xmark"></i> Cancel
      </button>
    </div>
  </div>
</div>

<!-- Time ago JS (for displaying relative time) -->
