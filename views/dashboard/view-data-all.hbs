<!-- Search form -->
<form id="data-search" method="GET" action="/dashboard/data/all">
    <!-- Search Bar and Filter Toggle -->
    <div class="search-bar-container">
        <input type="text" name="title" class="search-input-main" placeholder="Search data entry title...">
        
        <button class="search-btn" type="submit">
            <i class="fas fa-search"></i> Search
        </button>

        <span id="filter-toggle" class="filter-toggle" onclick="toggleFilters()">
            <i class="fas fa-sliders-h"></i> Show Filters
            </span>
        </div>

        <!-- Hidden Filters Section -->
        <div id="filter-section" class="filter-section hidden">
        <div class="filter-columns">
            
            <!-- Location Filters -->
            <div class="filter-column">
              <label for="region">Region</label>
              <select name="region" id="regions">
                  <option value="">Select a region</option>
                  <!-- Populated by locations.js -->
              </select>

              <label for="province">Province</label>
              <select name="province" id="provinces" disabled>
                  <option value="">Select a province</option>
                  <!-- Populated by locations.js -->
              </select>

              <label for="municipality">City/Municipality</label>
              <select name="municipality" id="municipalities" disabled>
                  <option value="">Select a city/municipality</option>
                  <!-- Populated by locations.js -->
              </select>

              <label for="barangay">Barangay</label>
              <input type="text" id="barangay">
            </div>

            <!-- Author & Date Filters -->
            <div class="filter-column">
              <label for="filter-author">Author</label>
              <input type="text" id="filter-author" name="author" placeholder="Enter author's name">

              <label for="filter-org">Organization Name</label>
              <input type="text" id="filter-org" name="company" placeholder="Enter organization name">

              <label>Collection Date Range</label>
              <div class="date-range">
                  <input type="date" id="filter-date-start" name="startDate"> to
                  <input type="date" id="filter-date-end" name="endDate">
              </div>
            </div>

        </div>
    </div>
</form>

{{#ifEquals data.length 0}}
  <div class="form-section">
    <span style="font-size: large;">No entries found.</span>
  </div>
{{/ifEquals}}

{{#each data}}
    <a href="/dashboard/data{{#if ../current_datasubs}}/review{{/if}}/{{data_entry_id}}" class="waste-data-btn-link">
        <div class="form-section waste-data-btn" style="cursor: pointer;">
            
            <!-- Header: Title and Status -->
            <div class="data-entry-header">
            <h2>{{title}}</h2>
            <span class="data-status 
                {{#ifEquals status 'Pending Review'}}stat-pending{{/ifEquals}} 
                {{#ifEquals status 'Approved'}}stat-approved{{/ifEquals}} 
                {{#ifEquals status 'Rejected'}}stat-rejected{{/ifEquals}}">
                {{status}}
            </span>
            </div>

            <!-- Main Info -->
            <p>
            <strong>Location:</strong> {{location_name}}<br>
            <i>Submitted on {{textDate date_submitted}}</i>
            </p>

            <p>
            <strong>Submitted by:</strong> {{uppercase lastname}}, {{firstname}}<br>
            <i>{{company_name}}</i>
            </p>

            <p>
            <strong>Collection Period:</strong> {{textDate collection_start}} â€“ {{textDate collection_end}}</p>

        </div>
    </a>
{{/each}}

<!-- Page counter -->
<div class="pagination">
    {{#if totalPages}}
        {{#unless (eq currentPage 1)}}
            <a href="?page=1" class="pagination-btn arrow"><i class="fa-solid fa-angles-left"></i></a>
        {{/unless}}

        {{#if (gt currentPage 1)}}
            <a href="?page={{subtract currentPage 1}}" class="pagination-btn arrow"><i class="fa-solid fa-chevron-left"></i></a>
        {{/if}}

        {{#each (paginationRange currentPage totalPages)}}
            <a href="?page={{this}}" class="pagination-btn {{#ifEquals this ../currentPage}}active{{/ifEquals}}">{{this}}</a>
        {{/each}}

        {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}" class="pagination-btn arrow"><i class="fa-solid fa-chevron-right"></i></a>
        {{/if}}

        {{#unless (eq currentPage totalPages)}}
            <a href="?page={{totalPages}}" class="pagination-btn arrow"><i class="fa-solid fa-angles-right"></i></a>
        {{/unless}}
    {{/if}}
</div>

<!-- Location search script -->
<script src="../../js/locations-search.js"></script>

<!-- Toggle filter script -->
<script>

function toggleFilters() {
    const filterSection = document.getElementById('filter-section');
    const toggleText = document.getElementById('filter-toggle');

    const isHidden = filterSection.classList.toggle('hidden');

    // Update toggle label text
    toggleText.innerHTML = `
      <i class="fas fa-sliders-h"></i> ${isHidden ? 'Show Filters' : 'Hide Filters'}
    `;
  }

</script>

