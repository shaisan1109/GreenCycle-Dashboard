<!-- Title card -->
<fieldset style="width: 97.3%; margin-bottom: 10px; padding-top: 20px; padding-bottom: 20px">
    <h1 style="margin:0">{{wasteGen.title}}</h1>
    <h3 style="margin:0; font-weight:normal;">
        <i class="fa-solid fa-location-dot"></i>&nbsp; {{wasteGen.location_name}}
    </h3>
</fieldset>

<fieldset style="width: 97.3%;">
    <legend>Edit History</legend>

    <table>
        {{#each editPointers}}
            <tr>
                <td> ‚óè </td>
                <td>{{textDateTime datetime}}</td>
                <td>{{uppercase lastname}}, {{firstname}}</td>
                <td>{{remarks}}</td>
            </tr>
        {{/each}}
    </table>
</fieldset>

<!-- Footer: Redirect back to data entry -->
<fieldset style="width: 97.3%; margin-bottom: 10px; margin-top: 10px; padding-top: 20px; padding-bottom: 20px">
    <a href="/dashboard/data/{{wasteGen.data_entry_id}}">
        <button class="btn-submit">< Back to data entry</button>
    </a>
</fieldset>