{{!-- <h2>Data Submission Form</h2> --}}

<form action="/dashboard/submit-report/upload/confirm" method="POST" enctype="multipart/form-data">

    <div class="step active" data-step="0">
        <div class="instructions-tab">
            <h2><i class="fas fa-upload"></i> Spreadsheet Upload Instructions</h2>

            <p>Please follow these steps to prepare and upload your spreadsheet correctly:</p>

            <ul>
                <li><i class="fas fa-download"></i> Download the spreadsheet format using the button below.</li>
                <li><i class="fas fa-pen"></i> <strong>Only fill in the yellow cells</strong>. These are the editable fields.</li>
                <li><i class="fas fa-ban"></i> <strong>Do not leave yellow cells blank</strong>. If the value is zero, enter 0.</li>
                <li><i class="fas fa-exclamation-circle"></i> Do not modify headers or any non-yellow cell.</li>
                <li><i class="fas fa-upload"></i> Once completed, return to the form tab and upload your file.</li>
            </ul>

            <a href="/static/waste-upload-template.xlsx" class="download-btn" download>
                <i class="fas fa-file-excel"></i> Download Spreadsheet Format
            </a>
        </div>
    </div>

    <!-- Step 1 -->
    <div class="step" data-step="1">
        <!-- Title Section -->
        <div class="form-section">
        <h3><i class="fas fa-heading"></i> Submission Title</h3>
        <label for="title">Title</label>
        <input type="text" name="title" id="title"
                placeholder="Provide a meaningful title (up to 100 characters only)">
        </div>

        <!-- Personal Information -->
        <div class="form-section">
        <h3><i class="fas fa-user"></i> Personal Information</h3>
        <p><strong>Name:</strong> {{uppercase user.lastname}}, {{user.firstname}}</p>
        <p><strong>Company:</strong> {{user.company}}</p>
        <input type="hidden" id="company" name="company" value="{{user.company}}">
        </div>

        <!-- Location Selection -->
        <div class="form-section">
        <h3><i class="fas fa-map-marker-alt"></i> Select Location</h3>

        <label for="region">Region</label>
        <select name="region" id="regions" required>
            <option value="">Select a region</option>
        </select>

        <label for="province">Province</label>
        <select name="province" id="provinces" disabled required>
            <option value="">Select a province</option>
        </select>

        <label for="municipality">City/Municipality</label>
        <select name="municipality" id="municipalities" disabled required>
            <option value="">Select a city/municipality</option>
        </select>

        <label for="barangay">Barangay (if applicable)</label>
        <input type="text" id="barangay" name="barangay">
        </div>

        <!-- Collection Date Range -->
        <div class="form-section">
            <h3><i class="fas fa-calendar-alt"></i> Location Information</h3>

            <label for="date_start">Data Collection Start Date</label>
            <input type="date" id="date_start" name="date_start" required>

            <label for="date_end">Data Collection End Date</label>
            <input type="date" id="date_end" name="date_end" required>
        </div>

        <!-- File Upload -->
        <div class="form-section">
            <h3><i class="fas fa-file-upload"></i> Upload Waste Data Spreadsheet</h3>

            <div id="drop-area" class="drop-area">
                <p><i class="fas fa-cloud-upload-alt fa-2x"></i></p>
                <p>Drag and drop your spreadsheet here<br>or click to browse</p>
                <input type="file" id="fileElem" name="spreadsheet" accept=".xlsx,.xls,.csv" required>
            </div>

            <p id="file-name-display" class="file-name"></p>

            <button type="submit" class="upload-btn">
                <i class="fas fa-upload"></i> Upload and Submit Form
            </button>
        </div>
    </div>

    <div>
        <center>
            <button type="button" id="prevBtn" class="disabled download-btn">Back</button>
            <button type="button" id="nextBtn" class="disabled download-btn">Proceed to Form</button>
        </center>
    </div>
</form>

