// File upload verification
document.getElementById("fileElem").addEventListener("change", async function (e) {
  const file = e.target.files[0];
  if (!file) return;

  const errorDiv = document.getElementById("xlsx-errors");
  errorDiv.innerHTML = ""; // Reset errors
  errorDiv.classList.remove("show");

  // Show file name
  document.getElementById("file-name-display").textContent = `Selected: ${file.name}`;

  const reader = new FileReader();

  reader.onload = function (e) {
    try {
      const data = new Uint8Array(e.target.result);
      const workbook = XLSX.read(data, { type: "array" });
      const sheet = workbook.Sheets[workbook.SheetNames[0]];
      const json = XLSX.utils.sheet_to_json(sheet, { header: 1 });

      const errors = [];

      // --- Validate Manual Data ---
      const population = json[0]?.[1];
      const perCapita = json[1]?.[1];
      const annual = json[2]?.[1];

      if (population === undefined || population === null || population.toString().trim() === '') {
        errors.push("Population is required.");
      } else if (!/^\d+$/.test(population.toString())) {
        errors.push("Population must be a whole number.");
      }

      if (perCapita === undefined || perCapita === null || perCapita.toString().trim() === '') {
        errors.push("Per Capita is required.");
      } else if (isNaN(perCapita)) {
        errors.push("Per Capita must be a number.");
      }

      if (annual === undefined || annual === null || annual.toString().trim() === '') {
        errors.push("Annual Total is required.");
      } else if (isNaN(annual)) {
        errors.push("Annual Total must be a number.");
      }

      // --- Matrix Validations ---
      const sectorHeaderRow = 6;
      const matrixStartRow = 7;
      const sectors = json[sectorHeaderRow]?.slice(2) || [];
      const columnCount = 2 + sectors.length;

      for (let i = matrixStartRow; i < json.length; i++) {
        const row = json[i];
        if (!row || !row[1]) continue; // skip empty or invalid rows

        const rowLabel = row[1] || `row ${i + 1}`;

        for (let j = 2; j < columnCount; j++) {
          const cell = row[j];
          const colIndex = j - 2;
          const sectorName = sectors[colIndex] || `Sector ${colIndex + 1}`;

          if (cell === undefined || cell === null || cell.toString().trim() === '') {
            errors.push(`Blank cell in "${rowLabel}" under "${sectorName}".`);
          } else if (isNaN(cell)) {
            errors.push(`Invalid number in "${rowLabel}" under "${sectorName}": "${cell}"`);
          }
        }
      }

      // Show or hide the error box using enhanced display
      if (errors.length > 0) {
        displayEnhancedErrors(errors);
        document.querySelector(".upload-btn").disabled = true;
      } else {
        displayEnhancedErrors([]);
        document.querySelector(".upload-btn").disabled = false;
      }

    } catch (error) {
      console.error('Error processing file:', error);
      displayEnhancedErrors(['Error processing file: ' + error.message]);
      document.querySelector(".upload-btn").disabled = true;
    }
  };

  reader.onerror = function(error) {
    console.error('FileReader error:', error);
    displayEnhancedErrors(['Error reading file: ' + error.message]);
  };

  reader.readAsArrayBuffer(file);
});

// Block form submission if upload button is disabled
document.querySelector("form").addEventListener("submit", function (e) {
  if (document.querySelector(".upload-btn").disabled) {
    e.preventDefault();
    document.getElementById("xlsx-errors").scrollIntoView({ behavior: "smooth" });
  }
});

// Disable upload btn while required fields are incomplete
document.addEventListener("DOMContentLoaded", function () {
  const requiredFields = [
    "#title",
    "#regions",
    "#date_start",
    "#date_end",
    "#fileElem"
  ];

  const submitBtn = document.querySelector(".upload-btn");

  function validateSpreadsheetForm() {
    let allValid = true;

    requiredFields.forEach(selector => {
      const el = document.querySelector(selector);
      const val = el?.type === "file" ? el?.files?.length : el?.value?.trim();
      const errorEl = document.getElementById("error-" + el.id);
      const touched = el.dataset.touched === "true";
      let error = "";

      switch (selector) {
        case "#title":
          if (!val) error = "Title is required.";
          break;

        case "#regions":
          if (!val) error = "Please select a region.";
          break;

        case "#date_start":
          if (!val) error = "Start Date is required.";
          break;

        case "#date_end":
          const startVal = document.querySelector("#date_start").value;
          if (!val) error = "End Date is required.";
          else if (startVal && val < startVal)
            error = "End date cannot be before start date.";
          break;

        case "#fileElem":
          if (el.files.length === 0)
            error = "Please upload a spreadsheet file.";
          break;
      }

      if (errorEl) {
        errorEl.textContent = touched ? error : "";
      }

      if (error) allValid = false;
    });

    // Disable submit if spreadsheet validation section is visible
    const xlsxErrors = document.getElementById("xlsx-errors");
    if (xlsxErrors && getComputedStyle(xlsxErrors).display === "block") {
      allValid = false;
    }

    submitBtn.disabled = !allValid;
    submitBtn.classList.toggle("disabled", !allValid);
  }

  // Add event listeners
  requiredFields.forEach(selector => {
    const el = document.querySelector(selector);
    if (el) {
      el.addEventListener("input", validateSpreadsheetForm);
      el.addEventListener("change", validateSpreadsheetForm);
      el.addEventListener("blur", () => {
        el.dataset.touched = "true";
        validateSpreadsheetForm();
      });
    }
  });

  // Initial check on page load
  validateSpreadsheetForm();
});

</script>
