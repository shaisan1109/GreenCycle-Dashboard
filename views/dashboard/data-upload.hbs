<!-- Date picker control -->
<script>
  const startDateInput = document.getElementById('date_start');
  const endDateInput = document.getElementById('date_end');

  // Function to toggle readonly state based on start/end values
  function updateEndDateState() {
    if (startDateInput.value || endDateInput.value) {
      // If start date is selected OR end date already has a value (from prefill)
      endDateInput.removeAttribute('readonly');
      if (startDateInput.value) {
        endDateInput.min = startDateInput.value; // Prevent earlier date
      }
    } else {
      // Lock and clear end date if nothing filled
      endDateInput.setAttribute('readonly', true);
      endDateInput.value = '';
      endDateInput.removeAttribute('min');
    }
  }

  // React to start date changes
  startDateInput.addEventListener('input', updateEndDateState);

  // Run once on page load (handles prefilled values)
  document.addEventListener('DOMContentLoaded', updateEndDateState);
</script>

