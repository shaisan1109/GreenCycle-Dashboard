<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data Entry</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

<h2>Edit Data Entry: {{wasteGen.title}}</h2>

<!-- Submission Method Toggle -->
<div class="method-toggle">
    <button type="button" class="toggle-btn active" data-method="manual">
        <i class="fas fa-keyboard"></i> Manual Entry
    </button>
    <button type="button" class="toggle-btn" data-method="upload">
        <i class="fas fa-upload"></i> Upload Spreadsheet
    </button>
</div>

<!-- MANUAL FORM (existing form - UNCHANGED LAYOUT) -->
<div id="manual-form" style="display: block;">
    <form id="manual-entry-form" data-prefill-region="{{prefill.region}}" data-prefill-province="{{prefill.province}}" data-prefill-municipality="{{prefill.municipality}}" data-prefill-barangay="{{prefill.barangay}}">
        <input type="hidden" name="dataEntryId" id="dataEntryId" value="{{dataEntryId}}">

        <div class="form-section">
            <h3><i class="fas fa-heading"></i> Submission Title</h3>
            <label for="title">Title<span class="required">*</span></label>
            <input type="text" name="title" id="title" value="{{wasteGen.title}}" required>
            <div class="error-msg" id="error-title"></div>
        </div>

        <div class="form-section">
            <h3><i class="fas fa-user"></i> Personal Information</h3>
            <p><strong>Name:</strong> {{uppercase user.lastname}}, {{user.firstname}}</p>
            <p><strong>Company:</strong> {{user.company}}</p>
            <input type="hidden" id="company" name="company" value="{{user.company}}">
        </div>

        <div class="form-section">
            <h3><i class="fas fa-map-marker-alt"></i> Select Location</h3>

            <label for="region">Region<span class="required">*</span></label>
            <select name="region" id="regions" required>
                <option value="">Select a region</option>
            </select>
            <div class="error-msg" id="error-regions"></div>

            <label for="province">Province</label>
            <select name="province" id="provinces" disabled>
                <option value="">Select a province</option>
            </select>

            <label for="municipality">City/Municipality</label>
            <select name="municipality" id="municipalities" disabled>
                <option value="">Select a city/municipality</option>
            </select>

            <label for="barangay">Barangay (if applicable)</label>
            <select name="barangay" id="barangay" disabled>
                <option value="">Select a barangay</option>
            </select>
        </div>

        <div class="form-section">
            <h3><i class="fas fa-calendar-alt"></i> Collection Period</h3>

            <label for="date_start">Data Collection Start Date<span class="required">*</span></label>
            <input type="date" id="date_start" name="date_start" value="{{wasteGen.collection_start}}" required>
            <div class="error-msg" id="error-date_start"></div>

            <label for="date_end">Data Collection End Date<span class="required">*</span></label>
            <input type="date" id="date_end" name="date_end" value="{{wasteGen.collection_end}}" required>
            <div class="error-msg" id="error-date_end"></div>
        </div>

        <div class="form-section">
            <h3><i class="fas fa-dumpster"></i> Waste Generation Information</h3>

            <label for="population">Population (based on Census)<span class="required">*</span></label>
            <input type="number" id="population" name="population" value="{{wasteGen.population}}" required>
            <div class="error-msg" id="error-population"></div>

            <label for="per_capita">Waste Generation per Capita (kg/cap-day)<span class="required">*</span></label>
            <input type="number" id="per_capita" name="per_capita" step="0.001" value="{{wasteGen.per_capita}}" required>
            <div class="error-msg" id="error-per_capita"></div>

            <label for="annual">Annual Waste Generation (kg/year)<span class="required">*</span></label>
            <input type="number" id="annual" name="annual" step="0.001" value="{{wasteGen.annual}}" required>
            <div class="error-msg" id="error-annual"></div>
        </div>

        <!-- Waste Composition Table -->
        <div class="form-section">
            <h3><i class="fas fa-table"></i> Waste Composition Data</h3>
            <p style="font-size: 0.95rem; color: #666; margin-bottom: 1rem;">
                Enter waste amounts (in kg) for each waste type and sector. Leave cells as 0 if no waste was collected.
            </p>

            <div style="overflow-x: auto;">
                <table class="waste-input-table">
                    <thead>
                        <tr>
                            <th rowspan="2">Waste Category</th>
                            <th rowspan="2">Waste Type</th>
                            <th colspan="{{sectors.length}}">Economic Sector (kg)</th>
                        </tr>
                        <tr>
                            {{#each sectors}}
                            <th>{{name}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each supertypes}}
                        {{#each types}}
                        <tr>
                            {{#if @first}}
                            <td rowspan="{{../types.length}}" class="supertype-cell">{{../name}}</td>
                            {{/if}}
                            <td>{{name}}</td>
                            {{#each ../../sectors}}
                            <td>
                                <input 
                                    type="number" 
                                    step="0.001" 
                                    min="0"
                                    name="waste_{{this.id}}_{{../id}}"
                                    value="{{#with (lookup ../../../wasteMap (concat this.id '-' ../id))}}{{this}}{{else}}0{{/with}}"
                                    class="waste-input"
                                    data-type-id="{{../id}}"
                                    data-sector-id="{{this.id}}"
                                    data-waste-key="{{this.id}}-{{../id}}"
                                />
                            </td>
                            {{/each}}
                        </tr>
                        {{/each}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-section">
            <h3><i class="fas fa-comment"></i> Revision Comment (Optional)</h3>
            <label for="comment">Add a comment about your changes</label>
            <textarea id="comment" name="comment" rows="4" placeholder="Describe what you changed or updated..."></textarea>
        </div>

        <div class="form-section">
            <center>
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Submit Revised Entry
                </button>
                <a href="/dashboard/data/wip/{{dataEntryId}}">
                    <button type="button" class="btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </a>
            </center>
        </div>
    </form>
</div>

<!-- UPLOAD FORM (new spreadsheet upload) -->
<div id="upload-form" style="display: none;">
    <form id="upload-entry-form" enctype="multipart/form-data" data-prefill-region="{{prefill.region}}" data-prefill-province="{{prefill.province}}" data-prefill-municipality="{{prefill.municipality}}" data-prefill-barangay="{{prefill.barangay}}">
        <input type="hidden" name="dataEntryId" value="{{dataEntryId}}">

        <div class="step active" data-step="0">
            <div class="instructions-tab">
                <h2><i class="fas fa-upload"></i> Spreadsheet Upload Instructions</h2>

                <p>Please follow these steps to prepare and upload your revised spreadsheet:</p>

                <ul>
                    <li><i class="fas fa-download"></i> Download the spreadsheet format using the button below.</li>
                    <li><i class="fas fa-pen"></i> <strong>Only fill in the yellow cells</strong>. These are the editable fields.</li>
                    <li><i class="fas fa-ban"></i> <strong>Do not leave yellow cells blank</strong>. If the value is zero, enter 0.</li>
                    <li><i class="fas fa-exclamation-circle"></i> Do not modify headers or any non-yellow cell.</li>
                    <li><i class="fas fa-upload"></i> Once completed, return to the form tab and upload your file.</li>
                </ul>

                <a href="/static/waste-upload-template.xlsx" class="download-btn" download>
                    <i class="fas fa-file-excel"></i> Download Spreadsheet Format
                </a>
            </div>
        </div>

        <div class="step active" data-step="1">
            <div class="form-section">
                <h3><i class="fas fa-heading"></i> Submission Title</h3>
                <label for="title-upload">Title<span class="required">*</span></label>
                <input type="text" name="title" id="title-upload" value="{{wasteGen.title}}" required>
                <div class="error-msg" id="error-title-upload"></div>
            </div>

            <div class="form-section">
                <h3><i class="fas fa-user"></i> Personal Information</h3>
                <p><strong>Name:</strong> {{uppercase user.lastname}}, {{user.firstname}}</p>
                <p><strong>Company:</strong> {{user.company}}</p>
                <input type="hidden" name="company" value="{{user.company}}">
            </div>

            <div class="form-section">
                <h3><i class="fas fa-map-marker-alt"></i> Select Location</h3>

                <label for="region-upload">Region<span class="required">*</span></label>
                <select name="region" id="region-upload" required>
                    <option value="">Select a region</option>
                </select>
                <div class="error-msg" id="error-region-upload"></div>

                <label for="province-upload">Province</label>
                <select name="province" id="province-upload" disabled>
                    <option value="">Select a province</option>
                </select>

                <label for="municipality-upload">City/Municipality</label>
                <select name="municipality" id="municipality-upload" disabled>
                    <option value="">Select a city/municipality</option>
                </select>

                <label for="barangay-upload">Barangay (if applicable)</label>
                <select name="barangay" id="barangay-upload" disabled>
                    <option value="">Select a barangay</option>
                </select>
            </div>

            <div class="form-section">
                <h3><i class="fas fa-calendar-alt"></i> Collection Period</h3>

                <label for="date_start_upload">Data Collection Start Date<span class="required">*</span></label>
                <input type="date" id="date_start_upload" name="date_start" value="{{wasteGen.collection_start}}" required>
                <div class="error-msg" id="error-date_start_upload"></div>

                <label for="date_end_upload">Data Collection End Date<span class="required">*</span></label>
                <input type="date" id="date_end_upload" name="date_end" value="{{wasteGen.collection_end}}" required>
                <div class="error-msg" id="error-date_end_upload"></div>
            </div>

            <div class="form-section">
                <h3><i class="fas fa-file-upload"></i> Upload Revised Waste Data Spreadsheet</h3>

                <div id="drop-area-upload" class="drop-area">
                    <p><i class="fas fa-cloud-upload-alt fa-2x"></i></p>
                    <p>Drag and drop your spreadsheet here<br>or click to browse</p>
                    <input type="file" id="fileElemUpload" name="spreadsheet" accept=".xlsx,.xls,.csv" required>
                </div>

                <p id="file-name-display-upload" class="file-name"></p>

                <div id="xlsx-errors-upload" class="form-errors"></div>
            </div>

            <div class="form-section">
                <h3><i class="fas fa-comment"></i> Revision Comment (Optional)</h3>
                <label for="comment-upload">Add a comment about your changes</label>
                <textarea id="comment-upload" name="comment" rows="4" placeholder="Describe what you changed or updated..."></textarea>
            </div>

            <div class="form-section">
                <center>
                    <button type="submit" class="upload-btn">
                        <i class="fas fa-upload"></i> Upload and Submit Revision
                    </button>
                    <a href="/dashboard/data/wip/{{dataEntryId}}">
                        <button type="button" class="btn-cancel">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </a>
                </center>
            </div>
        </div>
    </form>
</div>

<script src="/../js/locations.js" type="text/javascript"></script>
<script src="/../js/locations-revision.js" type="text/javascript"></script>
<script src="/../js/file-drop-revision.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

<script>
// Populate waste composition values from wasteMap
document.addEventListener('DOMContentLoaded', function() {
    // Parse wasteMap from server
    const wasteMap = {{{json wasteMap}}};
    
    // Populate each input field
    document.querySelectorAll('.waste-input').forEach(input => {
        const key = input.dataset.wasteKey;
        if (wasteMap[key] !== undefined && wasteMap[key] !== null) {
            input.value = wasteMap[key];
        }
    });
});

// Method toggle functionality
document.querySelectorAll('.toggle-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const method = this.dataset.method;
        
        // Update button states
        document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        // Toggle forms
        if (method === 'manual') {
            document.getElementById('manual-form').style.display = 'block';
            document.getElementById('upload-form').style.display = 'none';
        } else {
            document.getElementById('manual-form').style.display = 'none';
            document.getElementById('upload-form').style.display = 'block';
        }
    });
});

// Initialize location dropdowns for upload form
document.addEventListener('DOMContentLoaded', function() {
    // Set prefill values for upload form
    const prefillRegion = '{{prefill.region}}';
    const prefillProvince = '{{prefill.province}}';
    const prefillMunicipality = '{{prefill.municipality}}';
    const prefillBarangay = '{{prefill.barangay}}';
    
    if (prefillRegion) {
        setTimeout(() => {
            document.getElementById('region-upload').value = prefillRegion;
            document.getElementById('region-upload').dispatchEvent(new Event('change'));
            
            if (prefillProvince) {
                setTimeout(() => {
                    document.getElementById('province-upload').value = prefillProvince;
                    document.getElementById('province-upload').dispatchEvent(new Event('change'));
                    
                    if (prefillMunicipality) {
                        setTimeout(() => {
                            document.getElementById('municipality-upload').value = prefillMunicipality;
                            document.getElementById('municipality-upload').dispatchEvent(new Event('change'));
                            
                            if (prefillBarangay) {
                                setTimeout(() => {
                                    document.getElementById('barangay-upload').value = prefillBarangay;
                                }, 300);
                            }
                        }, 300);
                    }
                }, 300);
            }
        }, 500);
    }
});

// File upload validation for upload form
document.getElementById("fileElemUpload").addEventListener("change", async function (e) {
    const file = e.target.files[0];
    if (!file) return;

    const errorDiv = document.getElementById("xlsx-errors-upload");
    errorDiv.innerHTML = "";
    errorDiv.classList.remove("show");

    document.getElementById("file-name-display-upload").textContent = `Selected: ${file.name}`;

    const reader = new FileReader();

    reader.onload = function (e) {
        try {
            const data = new Uint8Array(e.target.result);
            const workbook = XLSX.read(data, { type: "array" });
            const sheet = workbook.Sheets[workbook.SheetNames[0]];
            const json = XLSX.utils.sheet_to_json(sheet, { header: 1 });

            const errors = [];

            // Validate Manual Data
            const population = json[0]?.[1];
            const perCapita = json[1]?.[1];
            const annual = json[2]?.[1];

            if (population === undefined || population === null || population.toString().trim() === '') {
                errors.push("Population is required.");
            } else if (!/^\d+$/.test(population.toString())) {
                errors.push("Population must be a whole number.");
            }

            if (perCapita === undefined || perCapita === null || perCapita.toString().trim() === '') {
                errors.push("Per Capita is required.");
            } else if (isNaN(perCapita)) {
                errors.push("Per Capita must be a number.");
            }

            if (annual === undefined || annual === null || annual.toString().trim() === '') {
                errors.push("Annual Total is required.");
            } else if (isNaN(annual)) {
                errors.push("Annual Total must be a number.");
            }

            // Matrix Validations
            const sectorHeaderRow = 6;
            const matrixStartRow = 7;
            const sectors = json[sectorHeaderRow]?.slice(2) || [];
            const columnCount = 2 + sectors.length;

            for (let i = matrixStartRow; i < json.length; i++) {
                const row = json[i];
                if (!row || !row[1]) continue;

                const rowLabel = row[1] || `row ${i + 1}`;

                for (let j = 2; j < columnCount; j++) {
                    const cell = row[j];
                    const colIndex = j - 2;
                    const sectorName = sectors[colIndex] || `Sector ${colIndex + 1}`;

                    if (cell === undefined || cell === null || cell.toString().trim() === '') {
                        errors.push(`Blank cell in "${rowLabel}" under "${sectorName}".`);
                    } else if (isNaN(cell)) {
                        errors.push(`Invalid number in "${rowLabel}" under "${sectorName}": "${cell}"`);
                    }
                }
            }

            if (errors.length > 0) {
                displayEnhancedErrors(errors, 'xlsx-errors-upload');
                document.querySelector(".upload-btn").disabled = true;
            } else {
                displayEnhancedErrors([], 'xlsx-errors-upload');
                document.querySelector(".upload-btn").disabled = false;
            }

        } catch (error) {
            console.error('Error processing file:', error);
            displayEnhancedErrors(['Error processing file: ' + error.message], 'xlsx-errors-upload');
            document.querySelector(".upload-btn").disabled = true;
        }
    };

    reader.onerror = function(error) {
        console.error('FileReader error:', error);
        displayEnhancedErrors(['Error reading file: ' + error.message], 'xlsx-errors-upload');
    };

    reader.readAsArrayBuffer(file);
});

// Enhanced error display function
function displayEnhancedErrors(errors, targetId) {
    const errorDiv = document.getElementById(targetId);
    
    if (!errors || errors.length === 0) {
        errorDiv.innerHTML = "";
        errorDiv.classList.remove("show");
        return;
    }

    const categories = {
        manual: {
            title: "Required Information",
            icon: "fas fa-user-edit",
            errors: []
        },
        matrix: {
            title: "Spreadsheet Data", 
            icon: "fas fa-table",
            errors: []
        }
    };

    errors.forEach(error => {
        if (error.includes("Population") || error.includes("Per Capita") || error.includes("Annual Total")) {
            categories.manual.errors.push(error);
        } else {
            categories.matrix.errors.push(error);
        }
    });

    let html = `
        <div class="error-header">
            <i class="fas fa-exclamation-triangle"></i>
            <h4>Please Fix These Issues Before Submitting</h4>
        </div>
        <div class="error-summary">
            <span class="error-count">${errors.length} error${errors.length !== 1 ? 's' : ''} found</span>
        </div>
        <div class="error-categories">
    `;

    Object.entries(categories).forEach(([key, category]) => {
        if (category.errors.length > 0) {
            html += `
                <div class="error-category">
                    <h5><i class="${category.icon}"></i> ${category.title}</h5>
                    <ul class="error-list">
            `;
            
            category.errors.forEach(error => {
                html += `
                    <li class="error-item">
                        <i class="fas fa-times-circle"></i>
                        <span class="error-item-text">${error}</span>
                    </li>
                `;
            });
            
            html += `</ul></div>`;
        }
    });

    html += `</div>`;
    errorDiv.innerHTML = html;
    errorDiv.classList.add("show");
    
    setTimeout(() => {
        errorDiv.scrollIntoView({ behavior: "smooth", block: "center" });
    }, 100);
}

// Manual form submission handling
document.getElementById('manual-entry-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const wasteComposition = [];
    
    // Collect waste composition data from inputs
    document.querySelectorAll('.waste-input').forEach(input => {
        const typeId = input.dataset.typeId;
        const sectorId = input.dataset.sectorId;
        const amount = parseFloat(input.value) || 0;
        
        wasteComposition.push({
            type_id: typeId,
            sector_id: sectorId,
            waste_amount: amount
        });
    });
    
    const submitData = {
        dataEntryId: formData.get('dataEntryId'),
        title: formData.get('title'),
        region: formData.get('region'),
        province: formData.get('province') || null,
        municipality: formData.get('municipality') || null,
        barangay: formData.get('barangay') || null,
        population: formData.get('population'),
        per_capita: formData.get('per_capita'),
        annual: formData.get('annual'),
        date_start: formData.get('date_start'),
        date_end: formData.get('date_end'),
        comment: formData.get('comment') || '',
        wasteComposition: wasteComposition
    };
    
    try {
        const response = await fetch('/api/data/edit-report', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(submitData)
        });
        
        if (response.ok) {
            alert('Entry revised successfully!');
            window.location.href = '/dashboard/data/wip/{{dataEntryId}}';
        } else {
            alert('Error submitting revision. Please try again.');
        }
    } catch (error) {
        console.error('Submission error:', error);
        alert('Error submitting revision. Please try again.');
    }
});

// Upload form submission handling
document.getElementById('upload-entry-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    
    try {
        const response = await fetch('/api/data/edit-report/upload', {
            method: 'POST',
            body: formData
        });
        
        const result = await response.json();
        
        if (response.ok) {
            alert('Entry revised successfully via spreadsheet!');
            window.location.href = result.redirectUrl || '/dashboard/data/wip/{{dataEntryId}}';
        } else {
            alert('Error: ' + (result.error || 'Failed to submit revision'));
        }
    } catch (error) {
        console.error('Upload submission error:', error);
        alert('Error submitting revision. Please try again.');
    }
});
</script>

