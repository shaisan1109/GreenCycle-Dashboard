      responsive: false,
      maintainAspectRatio: false,
      plugins: {
        tooltip: {
          callbacks: {
            label: ({ raw, label, chart }) => {
              const total = chart._metasets[0].total || 1;
              const percent = ((raw / total) * 100).toFixed(3);
              return `${label}: ${Number(raw).toFixed(3)} kg (${percent}%)`;
            }
          }
        },
        legend: {
          display: mode === 'detailed',
          position: 'bottom',
          labels: {
