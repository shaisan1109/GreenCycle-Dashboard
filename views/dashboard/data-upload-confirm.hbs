  <input type="hidden" name="date_end" value="{{formDataRaw.date_end}}">
</form>

<!-- POST request script -->
<script>

// Pass req.body from previous form to this
const formData = {{{formData}}}

// Pass variables from server to js
const wasteMatrix = {{{wasteMatrixJson}}}
const population = {{population}}
const per_capita = {{perCapita}}
const annual = {{annual}}
const sectorsJson = {{{sectorsJson}}}

// Prepare formData with additional variables
formData.population = population
formData.per_capita = per_capita
formData.annual = annual
formData.wasteMatrix = wasteMatrix
formData.sectorsFromExcel = sectorsJson

// Submit button
const submitBtn = document.getElementById("submitBtn")

// Function to format error messages with details
function formatErrorMessage(error) {
  let html = '<div style="margin-bottom: 15px;">';
  
  // Main error message
  if (error.message) {
    html += `<p style="font-size: 1.1rem; margin-bottom: 10px;"><strong>${error.message}</strong></p>`;
  }
  
  // Validation errors (array of specific issues)
  if (error.validationErrors && error.validationErrors.length > 0) {
    html += '<div style="background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 8px; padding: 15px; margin: 15px 0;">';
    html += '<p style="margin: 0 0 10px 0; font-weight: 600; color: #721c24;"><i class="fas fa-times-circle"></i> Issues Found:</p>';
    html += '<ul style="margin: 0; padding-left: 25px; color: #721c24;">';
    
    error.validationErrors.forEach(err => {
      html += `<li style="margin-bottom: 8px;">`;
      
      // Cell location
      if (err.cell || (err.row && err.column)) {
        const cellRef = err.cell || `Row ${err.row}, Column "${err.column}"`;
        html += `<strong>${cellRef}:</strong> `;
      }
      
      // Error description
      html += err.error || err.message || 'Invalid value';
      
      // Current value if provided
      if (err.value !== undefined && err.value !== null) {
        html += ` <span style="background-color: #fff; padding: 2px 6px; border-radius: 3px; font-family: monospace;">(Found: ${err.value})</span>`;
      }
      
      // Expected value or suggestion
      if (err.expected) {
        html += ` <span style="color: #155724;">(Expected: ${err.expected})</span>`;
      }
      
      html += `</li>`;
    });
    
    html += '</ul>';
    html += '</div>';
  }
  
  // Data quality warnings
  if (error.warnings && error.warnings.length > 0) {
    html += '<div style="background-color: #fff3cd; border: 1px solid #ffeeba; border-radius: 8px; padding: 15px; margin: 15px 0;">';
    html += '<p style="margin: 0 0 10px 0; font-weight: 600; color: #856404;"><i class="fas fa-exclamation-triangle"></i> Warnings:</p>';
    html += '<ul style="margin: 0; padding-left: 25px; color: #856404;">';
    
    error.warnings.forEach(warn => {
      html += `<li style="margin-bottom: 5px;">${warn}</li>`;
    });
    
    html += '</ul>';
    html += '</div>';
  }
  
  // Specific field errors
  if (error.fields) {
    html += '<div style="margin-top: 15px;">';
    html += '<p style="font-weight: 600; margin-bottom: 8px;">Field Errors:</p>';
    html += '<ul style="padding-left: 25px;">';
    
    Object.keys(error.fields).forEach(field => {
      html += `<li><strong>${field}:</strong> ${error.fields[field]}</li>`;
    });
    
    html += '</ul>';
    html += '</div>';
  }
  
  // If no structured errors, show plain message
  if (!error.validationErrors && !error.warnings && !error.fields && !error.message) {
    html += '<p style="color: #721c24;">An error occurred while processing your submission. Please check your data and try again.</p>';
  }
  
  html += '</div>';
  return html;
}

document.addEventListener("DOMContentLoaded", function () {

  // Once submit is clicked, begin pushing to db
  submitBtn.addEventListener("click", async function (event) {
    event.preventDefault()
    
    // Disable button and show loading state
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';

    try {
      const response = await fetch("/api/data/submit-report/upload", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
      });

      const result = await response.json();
      
      if (response.ok) {
        // Success
        document.getElementById('success-approve').style.display = 'block'
      } else {
        // Error - show detailed message from backend
        const errorMessageDiv = document.getElementById('error-message');
        errorMessageDiv.innerHTML = formatErrorMessage(result.error || result);
        document.getElementById('error-approve').style.display = 'block';
      } 
    } catch (error) {
        console.error("Error:", error);
        
        // Network or unexpected error
        const errorMessageDiv = document.getElementById('error-message');
        errorMessageDiv.innerHTML = `
          <div style="background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 8px; padding: 15px;">
            <p style="margin: 0; color: #721c24;">
              <strong>Network Error:</strong> Unable to connect to the server. Please check your connection and try again.
            </p>
            <p style="margin: 10px 0 0 0; color: #721c24; font-size: 0.9rem;">
              <em>Technical details: ${error.message}</em>
            </p>
          </div>
        `;
        document.getElementById('error-approve').style.display = 'block';
    } finally {
      // Re-enable button
      submitBtn.disabled = false;
      submitBtn.innerHTML = 'Confirm Submission';
    }
  })
  
  // Error modal close handler
  document.getElementById('error-close').onclick = function() {
    document.getElementById('error-approve').style.display = 'none';
  }
  
  // Go back to fix spreadsheet
  document.getElementById('fix-spreadsheet-btn').onclick = function() {
    // Return to form with all data preserved
    document.getElementById('return-to-form').submit();
  }

})

</script>

<!-- Cancel modal script -->
<script>

// Wait for the DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const cancelModal = document.getElementById('cancel-modal');
    const cancelClose = document.getElementById('cancel-close');
    const cancelNo = document.getElementById('cancel-no');

    /* CANCEL MODAL */
    // Hide modal if close btn is clicked
    if (cancelClose) {
        cancelClose.onclick = function() {
            cancelModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (cancelNo) {
        cancelNo.onclick = function() {
            cancelModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == cancelModal) {
            cancelModal.style.display = "none";
        }
        if (event.target == document.getElementById('error-approve')) {
            document.getElementById('error-approve').style.display = "none";
        }
    }

    document.getElementById('cancel-yes').addEventListener('click', function () {
      document.getElementById('return-to-form').submit();
    });
})

function showCancel() {
    document.getElementById('cancel-modal').style.display = 'block';
}

</script>

