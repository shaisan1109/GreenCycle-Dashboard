<!-- Confirm window -->
<section class="welcome-card">
  <h1>Confirm Submission</h1>
</section>

<!-- Title Card -->
<div class="form-section title-card" style="text-align: center;">
  <h1 style="margin-bottom: 0.25rem;">{{formDataRaw.title}}</h1>
  <center>
    <h3 style="margin: 0; font-weight: normal; color: #555;">
        <i class="fa-solid fa-location-dot" style="color: #127009;"></i>&nbsp; {{fullLocation}}
    </h3>
  </center>
</div>

<!-- Info Blocks -->
<div class="info-grid">
  <!-- Collection Info -->
  <div class="form-section">
    <h3><i class="fas fa-calendar-alt"></i> Collection Info</h3>
    <table class="user-profile">
      <tr>
        <td class="label">Start Date</td>
        <td>{{ formDataRaw.date_start}}</td>
      </tr>
      <tr>
        <td class="label">End Date</td>
        <td>{{ formDataRaw.date_end}}</td>
      </tr>
    </table>
  </div>

  <!-- Waste Generation Info -->
  <div class="form-section">
    <h3><i class="fas fa-dumpster"></i> Waste Generation</h3>
    <table class="user-profile">
      <tr>
        <td class="label">Population (based on Census)</td>
        <td>{{commaInt population}}</td>
      </tr>
      <tr>
        <td class="label">Waste Generation per Capita (Kg/cap-day)</td>
        <td>{{commaNumber perCapita}}</td>
      </tr>
      <tr>
        <td class="label">Annual Waste Generation (kg/year)</td>
        <td>{{commaNumber annual}}</td>
      </tr>
    </table>
  </div>
</div>

<!-- Waste Composition -->
<div class="form-section">
  <h3><i class="fa-solid fa-table"></i> Spreadsheet Data</h3>
  <table class="data-table" id="waste-comp-table">
      <thead>
        <tr class="tb-header">
            <th style="padding-top: 10px !important; padding-bottom: 10px !important;">Waste Type</th>
            {{#each sectors}}<th>{{this}}</th>{{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each wasteMatrix}}
        <tr>
          <td>{{type}}</td>
          {{#each values}}<td>{{this}}</td>{{/each}}
        </tr>
        {{/each}}
    </tbody>
  </table>
</div>

<center>
  <button class="upload-btn" id="cancel-btn" style="background-color: gray;" onclick="showCancel()">Cancel</button>
  <button type="submit" id="submitBtn" class="upload-btn">Confirm Submission</button>
</center>

<!-- Cancel modal -->
<div id="cancel-modal" class="modal">
    <div class="modal-content">
        <span id="cancel-close" class="close">&times;</span>
        <h3>Cancel Submission</h3>
        <h3 style="font-weight: normal;">Return to form?</h3>

        <button type="button" id="cancel-no" class="review-cancel">
          No
        </button>&emsp;

        <button type="submit" id="cancel-yes" class="review-approve">
          Yes
        </button>
    </div>
</div>

<!-- Prefill data (if user cancels submission) -->
<form id="return-to-form" method="POST" action="/dashboard/submit-report/upload">
  <input type="hidden" name="return" value="true">
  <input type="hidden" name="title" value="{{formDataRaw.title}}">
  <input type="hidden" name="region" value="{{formDataRaw.region}}">
  <input type="hidden" name="province" value="{{formDataRaw.province}}">
  <input type="hidden" name="municipality" value="{{formDataRaw.municipality}}">
  <input type="hidden" name="barangay" value="{{formDataRaw.barangay}}">
  <input type="hidden" name="date_start" value="{{formDataRaw.date_start}}">
  <input type="hidden" name="date_end" value="{{formDataRaw.date_end}}">
</form>

<!-- POST request script -->
<script>

// Pass req.body from previous form to this
const formData = {{{formData}}}

// Pass variables from server to js
const wasteMatrix = {{{wasteMatrixJson}}}
const population = {{population}}
const per_capita = {{perCapita}}
const annual = {{annual}}
const sectorsJson = {{{sectorsJson}}}

// Prepare formData with additional variables
formData.population = population
formData.per_capita = per_capita
formData.annual = annual
formData.wasteMatrix = wasteMatrix
formData.sectorsFromExcel = sectorsJson

// Submit button
const submitBtn = document.getElementById("submitBtn")

document.addEventListener("DOMContentLoaded", function () {

  // Once submit is clicked, begin pushing to db
  submitBtn.addEventListener("click", async function (event) {
    event.preventDefault()

    try {
      const response = await fetch("/api/data/submit-report/upload", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
      });

      const result = await response.json();
      if (response.ok) {
        alert("Report submitted successfully!");
      } else {
        alert(result.error || "Submission failed.");
      } 
    } catch (error) {
        console.error("Error:", error);
        alert("Something went wrong.");
    }
  })

})

</script>

<!-- Cancel modal script -->
<script>

// Wait for the DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const cancelModal = document.getElementById('cancel-modal');
    const cancelClose = document.getElementById('cancel-close');
    const cancelNo = document.getElementById('cancel-no');

    /* APPROVE MODAL */
    // Hide modal if close btn is clicked
    if (cancelClose) {
        cancelClose.onclick = function() {
            cancelModal.style.display = "none";
        }
    }

    // Hide modal if Cancel button is clicked
    if (cancelNo) {
        cancelNo.onclick = function() {
            cancelModal.style.display = "none";
        }
    }
    
    // Hide modal if user clicks outside content
    window.onclick = function(event) {
        if (event.target == cancelModal) {
            cancelModal.style.display = "none";
        }
    }

    document.getElementById('cancel-yes').addEventListener('click', function () {
      document.getElementById('return-to-form').submit();
    });
})

function showCancel() {
    document.getElementById('cancel-modal').style.display = 'block';
}

</script>

