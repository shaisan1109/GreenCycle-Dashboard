<style>
/* Modal box */
.modal-content {
  background: #fff;
  margin: 5% auto;              /* lower top margin so it's more centered */
  padding: 20px;
  border-radius: 12px;
  width: 600px;                 /* wider modal */
  max-height: 80vh;             /* prevent it from overflowing screen */
  text-align: center;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  overflow-y: auto;             /* scroll modal if content is very tall */
}

/* Checklist container */
.checklist {
  text-align: left;
  margin: 20px 0;
  max-height: 60vh;             /* scroll only the list portion */
  overflow-y: auto;
  padding-left: 0;
  list-style: none;
}

/* Each list item */
.checklist > li {
  margin: 10px 0;
}

/* Super-item labels */
.checklist > li > label {
  font-weight: bold;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
}

/* Sub-items (nested list) */
.checklist ul {
  margin: 6px 0 6px 20px;
  padding-left: 0;
  list-style: none;
  border-left: 2px solid #eee;
}

.checklist ul li {
  margin: 4px 0;
}

.checklist input[type="checkbox"] {
  margin-right: 8px;
  cursor: pointer;
}

/* Default label text */
.checklist label {
  color: #000; /* normal black text */
}

/* If checkbox is unchecked â†’ gray text */
.checklist input[type="checkbox"]:not(:checked) + span {
  color: #bbb;  /* lighter gray but still readable */
}

/* Select All / Deselect All button */
#toggle-select {
  background: #1976d2;
  color: #fff;
  padding: 6px 12px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-bottom: 12px;
  font-size: 14px;
}
#toggle-select:hover {
  background: #125a9c;
}
</style>

<script>

document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.getElementById('sidebar');
    const openBtn = document.getElementById('open-sidebar-btn');
    const collapseBtn = document.getElementById('collapse-sidebar-btn');

    // --- Restore sidebar state from localStorage ---
    const savedState = localStorage.getItem('sidebarState');
    if (savedState === 'closed') {
        sidebar.classList.add('closed');
        sidebar.classList.remove('open');
        openBtn.style.display = 'flex';
        setTimeout(() => {
            openBtn.classList.add('visible');
        }, 10);
    } else {
        sidebar.classList.add('open');
    }

    // --- Collapse sidebar ---
    collapseBtn.addEventListener('click', () => {
        sidebar.classList.remove('open');
        sidebar.classList.add('closed');
        localStorage.setItem('sidebarState', 'closed');

        openBtn.style.display = 'flex';
        setTimeout(() => {
            openBtn.classList.remove('hidden');
            openBtn.classList.add('visible');
        }, 10);
    });

    // --- Open sidebar ---
    openBtn.addEventListener('click', () => {
        sidebar.classList.remove('closed');
        sidebar.classList.add('open');
        localStorage.setItem('sidebarState', 'open');

        openBtn.classList.add('hidden');
        openBtn.classList.remove('visible');
        setTimeout(() => {
            openBtn.style.display = 'none';
        }, 300);
    });

    // Logout code
    document.getElementById('logout').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent default navigation

        fetch('/logout', { method: 'DELETE', credentials: 'include' })
        .then(response => {
            if (response.ok) {
            window.location.href = "/"; // Redirect to login after logout
            }
        })
        .catch(err => console.error("Logout failed", err));
    })
});

</script>

<!-- Modal script -->
<script>
// Modal elements
const modal = document.getElementById("pdfModal");
const generateBtn = document.getElementById("generate-btn");
const closeBtn = document.querySelector(".close");
const cancelBtn = document.getElementById("cancel-generate");
const confirmBtn = document.getElementById("confirm-generate");
const entryId = {{entryId}};

// Extra elements for checklists
const toggleBtn = document.getElementById("toggle-select");
let allSelected = false;

// Show modal when clicking generate
generateBtn.addEventListener("click", () => {
  modal.style.display = "block";
  
  // Reset all checkboxes to checked when opening
  document.querySelectorAll("#pdfModal input[type=checkbox]").forEach(cb => {
    cb.checked = true;
  });
  
  // Reset toggle button state
  allSelected = true;
  toggleBtn.textContent = "Deselect All";
});

// Close modal on X or cancel
closeBtn.addEventListener("click", () => modal.style.display = "none");
cancelBtn.addEventListener("click", () => modal.style.display = "none");

// Close modal if clicking outside the box
window.addEventListener("click", (e) => {
  if (e.target === modal) modal.style.display = "none";
});

// Toggle Select All / Deselect All
toggleBtn.addEventListener("click", () => {
  allSelected = !allSelected;
  document.querySelectorAll("#pdfModal input[type=checkbox]").forEach(cb => {
    cb.checked = allSelected;
    cb.indeterminate = false;
  });
  toggleBtn.textContent = allSelected ? "Deselect All" : "Select All";
});

// Super-item behavior
document.querySelectorAll("#pdfModal .super-item").forEach(superItem => {
  superItem.addEventListener("change", () => {
    const group = superItem.dataset.group;
    document.querySelectorAll(`#pdfModal .sub-item[data-group="${group}"]`)
      .forEach(sub => sub.checked = superItem.checked);
  });
});

// Sub-item behavior
document.querySelectorAll("#pdfModal .sub-item").forEach(subItem => {
  subItem.addEventListener("change", () => {
    const group = subItem.dataset.group;
    const superItem = document.querySelector(`#pdfModal .super-item[data-group="${group}"]`);
    const subs = document.querySelectorAll(`#pdfModal .sub-item[data-group="${group}"]`);
    const allChecked = Array.from(subs).every(s => s.checked);
    const noneChecked = Array.from(subs).every(s => !s.checked);

    if (allChecked) {
      superItem.checked = true;
      superItem.indeterminate = false;
    } else if (noneChecked) {
      superItem.checked = false;
      superItem.indeterminate = false;
    } else {
      superItem.indeterminate = true; // dash state
    }
  });
});

// Confirm generate
confirmBtn.addEventListener("click", async () => {
  modal.style.display = "none";

  try {
    // Collect selected items
    const selected = Array.from(
      document.querySelectorAll("#pdfModal input[type=checkbox]:checked")
    ).map(cb => cb.value); // assumes each checkbox has value

    // Always prepend non-optional
    selected.unshift("data-title");
    selected.unshift("data-info");

    console.log(selected)

    // Send POST request
    const response = await fetch(`/api/data/${entryId}/pdf`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ sections: selected })
    });

    if (!response.ok) {
      throw new Error("Failed to generate PDF");
    }

    // Get PDF as blob
    const blob = await response.blob();
    const url = URL.createObjectURL(blob);

    // Download
    const a = document.createElement("a");
    a.href = url;
    a.download = "Waste_Report.pdf";
    a.click();

    // Optional: revoke object URL after a bit
    setTimeout(() => URL.revokeObjectURL(url), 1000);
  } catch (err) {
    console.error("PDF generation failed:", err);
    alert("Failed to generate PDF. Please try again.");
  }
});

</script>

</body>
