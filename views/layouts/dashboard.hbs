// API route
const isSummary = {{#if isSummary}}{{isSummary}}{{else}}false{{/if}};
const apiUrl = isSummary ? "/api/data/summary/pdf" : `/api/data/{{entryId}}/pdf`;

// Query (for data summary version)
const query = {{#if query}} {{{json query}}} {{else}} null {{/if}};

// Extra elements for checklists
const toggleBtn = document.getElementById("toggle-select");
let allSelected = false;

// Show modal when clicking generate
generateBtn.addEventListener("click", () => {
  pdfModal.style.display = "block";
  
  // Reset all checkboxes to checked when opening
  document.querySelectorAll("#pdfModal input[type=checkbox]").forEach(cb => {
    cb.checked = true;
  });
  
  // Reset toggle button state
  allSelected = true;
  toggleBtn.textContent = "Deselect All";
});

// Close modal on X or cancel
pdfCloseBtn.addEventListener("click", () => pdfModal.style.display = "none");
pdfCancelBtn.addEventListener("click", () => pdfModal.style.display = "none");

// Close modal if clicking outside the box
window.addEventListener("click", (e) => {
  if (e.target === pdfModal) pdfModal.style.display = "none";
});

// Toggle Select All / Deselect All
toggleBtn.addEventListener("click", () => {
  allSelected = !allSelected;
  document.querySelectorAll("#pdfModal input[type=checkbox]").forEach(cb => {
    cb.checked = allSelected;
    cb.indeterminate = false;
  });
  toggleBtn.textContent = allSelected ? "Deselect All" : "Select All";
});

// Super-item behavior
document.querySelectorAll("#pdfModal .super-item").forEach(superItem => {
  superItem.addEventListener("change", () => {
    const group = superItem.dataset.group;
    document.querySelectorAll(`#pdfModal .sub-item[data-group="${group}"]`)
      .forEach(sub => sub.checked = superItem.checked);
  });
});

// Sub-item behavior
document.querySelectorAll("#pdfModal .sub-item").forEach(subItem => {
  subItem.addEventListener("change", () => {
    const group = subItem.dataset.group;
    const superItem = document.querySelector(`#pdfModal .super-item[data-group="${group}"]`);
    const subs = document.querySelectorAll(`#pdfModal .sub-item[data-group="${group}"]`);
    const allChecked = Array.from(subs).every(s => s.checked);
    const noneChecked = Array.from(subs).every(s => !s.checked);

    if (allChecked) {
      superItem.checked = true;
      superItem.indeterminate = false;
    } else if (noneChecked) {
      superItem.checked = false;
      superItem.indeterminate = false;
    } else {
      superItem.indeterminate = true; // dash state
    }
  });
});

// Confirm generate
pdfConfirmBtn.addEventListener("click", async () => {
  // Close the section selection modal
  pdfModal.style.display = "none";

  // Show loading modal
  const loadingModal = document.getElementById("loadingModal");
  loadingModal.style.display = "block";

  try {
    // Collect selected items
    const selected = Array.from(
      document.querySelectorAll("#pdfModal input[type=checkbox]:checked")
    ).map(cb => cb.value);

    // Always prepend non-optional
    selected.unshift("filters");
    selected.unshift("data-title");
    selected.unshift("data-info");

    // Collect simulation settings if visible
    let simSettings = null;
    if (pdfSimSettings.style.display === "block") {
      simSettings = {
        forecastMonths: Number(document.getElementById("pdfForecastMonths").value),
        modelType: document.getElementById("pdfModelSelect").value,
        deterministic: document.getElementById("pdfDeterministic").checked,
        interpolate: document.getElementById("pdfInterpolate").checked
      };
    }

    // Send POST request
    const response = await fetch(apiUrl, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ sections: selected, query, simSettings })
    });

    if (!response.ok) throw new Error("Failed to generate PDF");

    // Get PDF as blob
    const blob = await response.blob();
    const url = URL.createObjectURL(blob);

    // Download
    const a = document.createElement("a");
    a.href = url;
    a.download = "{{title}}.pdf" || "Data Summary.pdf";
    a.click();

    // Optional: revoke object URL after a bit
    setTimeout(() => URL.revokeObjectURL(url), 1000);

  } catch (err) {
    console.error("PDF generation failed:", err);
    alert("Failed to generate PDF. Please try again.");
  } finally {
    // Always hide loading modal
    loadingModal.style.display = "none";
  }
});

</script>

