<h2 style="margin-bottom: 20px;">Waste Management Targets</h2>

<div class="form-section">
  <label for="quota-org">Select Organization:</label>
  <select id="quota-org" onchange="fetchQuotasForOrg()">
    {{#each orgList}}
      <option value="{{this}}" {{#ifEquals this ../selectedOrg}}selected{{/ifEquals}}>
        {{this}}
      </option>
    {{/each}}
  </select>
</div>

<div class="form-section">
  <h3><i class="fas fa-recycle"></i> Waste Category Targets</h3>
  <table class="user-profile">
    <thead>
      <tr>
        <th class="label">Waste Categories</th>
        <th class="label">Target (%)</th>
        <th class="label">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#if wasteQuotas.length}}
        {{#each wasteQuotas}}
        <tr>
          <td>{{this.waste_supertype_name}}</td>
          <td>
            <form method="POST" action="/control-panel/quotas/update-waste?org={{../selectedOrg}}" 
      class="inline-form" 
      onsubmit="return confirmUpdate('waste category', '{{this.waste_supertype_name}}')">
  <input type="hidden" name="quota_id" value="{{this.quota_id}}">
  <input type="hidden" name="waste_name" value="{{this.waste_supertype_name}}">
  <input type="number" name="quota_weight" value="{{this.quota_weight}}" step="0.01" min="0" max="100" required> %

          </td>
          <td>
              <button type="submit" class="btn-submit">Update</button>
            </form>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="3" style="text-align:center; color:#777;">No waste category quotas found for this organization.</td>
        </tr>
      {{/if}}
    </tbody>
  </table>
  <p style="font-size:0.9rem; color:#555;">Set the mandated collection/diversion rate targets for each waste category.</p>
</div>

<div class="form-section">
  <h3><i class="fas fa-industry"></i> Sector Targets</h3>
  <table class="user-profile">
    <thead>
      <tr>
        <th class="label">Sector</th>
        <th class="label">Target (%)</th>
        <th class="label">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#if sectorQuotas.length}}
        {{#each sectorQuotas}}
        <tr>
          <td>{{this.sector_name}}</td>
          <td>
            <form method="POST" action="/control-panel/quotas/update-sector?org={{../selectedOrg}}" 
      class="inline-form" 
      onsubmit="return confirmUpdate('sector', '{{this.sector_name}}')">
  <input type="hidden" name="quota_id" value="{{this.quota_id}}">
  <input type="hidden" name="sector_name" value="{{this.sector_name}}">
  <input type="number" name="quota_weight" value="{{this.quota_weight}}" step="0.01" min="0" max="100" required> %

          </td>
          <td>
              <button type="submit" class="btn-submit">Update</button>
            </form>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="3" style="text-align:center; color:#777;">No sector quotas found for this organization.</td>
        </tr>
      {{/if}}
    </tbody>
  </table>
  <p style="font-size:0.9rem; color:#555;">Set the mandated collection/diversion rate targets for each sector.</p>
</div>

<script>
  function confirmUpdate(type, name) {
    return confirm(`Are you sure you want to update the quota for the ${type} "${name}"?`);
  }

  function fetchQuotasForOrg() {
    const org = document.getElementById('quota-org').value;
    window.location.href = `/control-panel/quotas?org=${encodeURIComponent(org)}`;
  }
</script>

