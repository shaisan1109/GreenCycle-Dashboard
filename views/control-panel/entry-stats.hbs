<!-- Application counts by status -->
<div class="info-grid" style="margin-bottom: 1.5rem;">
  <div class="form-section stat-box text-center">
    <div class="stat-value">{{entryCount.approved}}</div>
    <span>Total Approved Entries</span>
  </div>

  <div class="form-section stat-box text-center">
    <div class="stat-value">{{entryCount.pending}}</div>
    <span>Total Pending Entries</span>
  </div>

  <div class="form-section stat-box text-center">
    <div class="stat-value">{{entryCount.rejected}}</div>
    <span>Total Entries Needing Revision</span>
  </div>

  <div class="form-section stat-box text-center top-region">
    <div class="stat-value">{{topRegions.[0].region_name}}</div>
    <span>Top Reporting Region</span>
  </div>
</div>

<!-- Latest Submissions + Top Contributors -->
<div class="info-grid">
  <!-- Latest Submissions -->
  <div class="form-section" style="flex: 2;">
    <h3><i class="fas fa-clock"></i> Latest Submissions</h3>
    {{#each latestSubmissions}}
      <div class="submission-card">
        <div>
          <span class="submission-title">{{title}}</span><br>
          {{uppercase lastname}}, {{firstname}}
        </div>
        <div class="submission-status">
          <span class="data-status 
            {{#ifEquals status 'Pending Review'}}stat-pending{{/ifEquals}} 
            {{#ifEquals status 'Approved'}}stat-approved{{/ifEquals}} 
            {{#ifEquals status 'Needs Revision'}}stat-revision{{/ifEquals}}">
            {{status}}
          </span><br><br>
          <i>{{textDate date_submitted}}</i>
        </div>
      </div>
    {{/each}}
    <br>
    <button class="btn-submit">See all submissions</button>
  </div>

  <!-- Top Contributors + Regions -->
  <div class="form-section" style="flex: 1;">
    <h3><i class="fas fa-users"></i> Top Contributors</h3>
    {{#each contributors}}
      <div class="ranked-item">
        {{uppercase lastname}}, {{firstname}}
        <span class="ranked-count">{{entry_count}}</span>
      </div>
    {{/each}}
    <br>
    <button id="top-contribs" class="btn-submit">See all top contributors</button>

    <hr style="margin: 1rem 0;">

    <br>
    <h3><i class="fas fa-map-marker-alt"></i> Top Reporting Regions</h3>
    {{#each topRegions}}
      <div class="ranked-item">
        {{region_name}}
        <span class="ranked-count">{{entry_count}}</span>
      </div>
    {{/each}}
    <br>
    <button class="btn-submit" onclick="openRegionModal()">See all top reporting regions</button>
  </div>
</div>

<!-- Submission History (Chart) -->
<div class="form-section">
  <h3><i class="fas fa-chart-line"></i> Submission History</h3>
  <canvas id="monthlySubmissionsChart" width="600" height="300"></canvas>
</div>

<!-- Top Contributors Modal -->
<div id="topContributorsModal" class="modal hidden">
  <div class="modal-content">
    <span class="close-button" onclick="closeModal()">&times;</span>
    <h3><i class="fas fa-users"></i> All Top Contributors</h3>
    <div id="contributorsList" class="ranked-list"></div>

    <!-- Pagination Controls -->
    <div class="pagination">
      <button id="prevPage" onclick="changePage(-1)">← Prev</button>
      <span id="pageIndicator">Page 1</span>
      <button id="nextPage" onclick="changePage(1)">Next →</button>
    </div>
  </div>
</div>

<!-- Top Regions Modal -->
<div id="topRegionsModal" class="modal hidden">
  <div class="modal-content">
    <span class="close-button" onclick="closeRegionModal()">&times;</span>
    <h3><i class="fas fa-map-marker-alt"></i> All Top Reporting Regions</h3>
    <div id="regionList" class="ranked-list"></div>
  </div>
</div>

