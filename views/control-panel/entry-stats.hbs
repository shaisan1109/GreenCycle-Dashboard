<!-- Script: Top Contributors Modal -->
<script>
let contributors = [];
let currentPage = 1;
const pageSize = 20;

document.getElementById('top-contribs').addEventListener('click', async () => {
  const res = await fetch('/api/control-panel/top-contributors');
  contributors = await res.json();
  currentPage = 1;
  showContributors();
  openModal();
});

function showContributors() {
  const start = (currentPage - 1) * pageSize;
  const end = start + pageSize;
  const pageItems = contributors.slice(start, end);

  const container = document.getElementById('contributorsList');
  container.innerHTML = '';

  pageItems.forEach(user => {
    const div = document.createElement('div');
    div.className = 'ranked-item';
    div.innerHTML = `<strong>${user.lastname.toUpperCase()}, ${user.firstname}</strong><span class="ranked-count">${user.entry_count}</span>`;
    container.appendChild(div);
  });

  renderPageNumbers();
}

function renderPageNumbers() {
  const totalPages = Math.ceil(contributors.length / pageSize);
  const pageContainer = document.getElementById('pageNumbers');
  pageContainer.innerHTML = '';

  for (let i = 1; i <= totalPages; i++) {
    const btn = document.createElement('button');
    btn.textContent = i;
    btn.className = 'pagination-square';
    if (i === currentPage) {
      btn.classList.add('active');
    }
    btn.onclick = () => {
      currentPage = i;
      showContributors();
    };
    pageContainer.appendChild(btn);
  }
}

function changePage(delta) {
  const totalPages = Math.ceil(contributors.length / pageSize);
  const newPage = currentPage + delta;
  if (newPage < 1 || newPage > totalPages) return;
  currentPage = newPage;
  showContributors();
}

function goToFirstPage() {
  currentPage = 1;
  showContributors();
}

function goToLastPage() {
  currentPage = Math.ceil(contributors.length / pageSize);
  showContributors();
}

function openModal() {
  document.getElementById('topContributorsModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('topContributorsModal').classList.add('hidden');
}
</script>


<!-- Script: Top Regions Modal -->
<script>

async function openRegionModal() {
  const res = await fetch('/api/control-panel/top-regions');
  const regions = await res.json();

  const container = document.getElementById('regionList');
  container.innerHTML = '';

  regions.forEach(region => {
    const div = document.createElement('div');
    div.className = 'ranked-item';

    // Apply red color if entry_count is 0
    if (region.entry_count === 0) {
      div.style.color = 'red';
      div.innerHTML = `${region.region_name}<span class="ranked-count" style="color: red;">${region.entry_count}</span>`;
    } else {
      div.innerHTML = `${region.region_name}<span class="ranked-count">${region.entry_count}</span>`;
    }

    container.appendChild(div);
  });

  document.getElementById('topRegionsModal').classList.remove('hidden');
}

function closeRegionModal() {
  document.getElementById('topRegionsModal').classList.add('hidden');
}
</script>

