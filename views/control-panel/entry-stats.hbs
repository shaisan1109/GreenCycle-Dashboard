<script>
async function fetchComplianceData() {
  const category = document.getElementById('compliance-type').value;
  const res = await fetch(`/api/compliance?category=${encodeURIComponent(category)}`);
  const data = await res.json();

  const tbody = document.getElementById('compliance-results');
  tbody.innerHTML = '';

  data.forEach(user => {
    const row = document.createElement('tr');
    row.innerHTML = `
      <td>${user.lastname.toUpperCase()}, ${user.firstname}</td>
      <td>${user.company_name || '-'}</td>
      <td>${user.diversion_percentage}%</td>
      <td>${user.target_percentage}%</td>
      <td>${user.total_collected ?? 0}</td>
      <td>${user.total_generated ?? 0}</td>
      <td>
        ${user.compliance_status === 'Compliant'
          ? `<span style='color: green; font-weight: bold;'>Compliant</span>`
          : `<span style='color: red; font-weight: bold;'>Non-Compliant</span>`
        }
      </td>`;
    tbody.appendChild(row);
  });
}

// load default
fetchComplianceData();
</script>



