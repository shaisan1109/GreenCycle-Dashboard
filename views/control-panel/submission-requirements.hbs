<h2 style="margin-bottom: 20px;">Submission Requirements</h2>

<div class="form-section">
  <h3><i class="fa-solid fa-list-ol"></i> Monthly Submission Requirements per Client</h3>

  <table class="user-profile">
    <thead>
      <tr>
        <th class="label">Client Name</th>
        <th class="label">Organization</th>
        <th class="label">Required Submissions</th>
        <th class="label">Action</th>
      </tr>
    </thead>

    <tbody>
      {{#if clientList.length}}
        {{#each clientList}}
        <tr>
          <td>{{this.lastname}}, {{this.firstname}}</td>
          <td>{{this.company_name}}</td>

          <td>
            <form method="POST"
                  action="/control-panel/submission-requirements/update"
                  class="inline-form"
                  onsubmit="return confirmUpdateRequirement('{{this.lastname}}, {{this.firstname}}')">

              <input type="hidden" name="user_id" value="{{this.user_id}}">
              
              <input type="number"
                     name="required"
                     value="{{this.required_submissions}}"
                     min="1"
                     class="req-input"
                     required>
          </td>

          <td>
            <button type="submit" class="btn-submit">Update</button>
            </form>
          </td>

        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="4" style="text-align:center; color:#777;">
            No client users found.
          </td>
        </tr>
      {{/if}}
    </tbody>
  </table>

  <p style="font-size:0.9rem; color:#555;">
    Adjust how many submissions each client must complete every month to be marked compliant.
  </p>
</div>

<script>
function confirmUpdateRequirement(name) {
  return confirm(`Are you sure you want to update the submission requirement for ${name}?`);
}
</script>

